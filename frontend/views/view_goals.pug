extends layout 

block content 
    //- add users name before title
    h1.viewGoals #{user} #{title}
    if goals && goals.length
        .goalsContainer
            //- Loop through all goals
            each goal in goals 
                .goalBox
                    h3 #{goal.title}
                    p #{goal.description}
                    p #{goal.deadline}
    else
        p.noGoals No goals found.
